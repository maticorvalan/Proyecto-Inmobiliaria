@model Proyecto_Inmobiliaria.Models.Inmueble

@{
    ViewData["Title"] = "Editar Inmueble";
    var propietarios = ViewBag.Propietarios as List<SelectListItem>;
    Inmueble inmueble = Model;
}
<div class="container mt-5">
        <h4 class="text-primary text-center">Editar Inmueble</h4>
    <hr class="mb-4" />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <form asp-action="Edit" method="post" novalidate>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Direccion">Dirección</label>
                            <input asp-for="Direccion" class="form-control"  />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Tipo">Tipo</label>
                            <select asp-for="Tipo" class="form-control" >
                                <option value="">Seleccione...</option>
                                <option value="Local" selected="@(inmueble.Tipo == "Local")">Local</option>
                                <option value="Depósito" selected="@(inmueble.Tipo == "Depósito")">Depósito</option>
                                <option value="Casa" selected="@(inmueble.Tipo == "Casa")">Casa</option>
                                <option value="Departamento" selected="@(inmueble.Tipo == "Departamento")">Departamento</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger"></span>
                        </div>  
                        <div class="form-group">
                            <label asp-for="Uso">Uso</label>
                            <select asp-for="Uso" class="form-control"  />            
                                <option value="">Seleccione...</option>
                                <option value="Comercial" selected="@(inmueble.Uso == "Comercial")">Comercial</option>
                                <option value="Residencial" selected="@(inmueble.Uso == "Residencial")">Residencial</option>
                            </select>
                            </select>
                            <span asp-validation-for="Uso" class="text-danger"></span>
                        </div>   
                        <div class="form-group">
                            <label asp-for="Ambientes">Ambientes</label>
                            <input asp-for="Ambientes" class="form-control"  />
                            <span asp-validation-for="Ambientes" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Superficie">Superficie m²</label>
                            <input asp-for="Superficie" class="form-control" type="number"  />
                            <span asp-validation-for="Superficie" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Latitud">Latitud</label>
                            <input asp-for="Latitud" class="form-control" type="number" step="any" />
                            <span asp-validation-for="Latitud" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Longitud">Longitud</label>
                            <input asp-for="Longitud" class="form-control" type="number" step="any" />
                            <span asp-validation-for="Longitud" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Estado">Estado</label>
                            <select asp-for="Estado" class="form-control"  />
                                <option value="">Seleccione...</option>
                                <option value="Disponible" selected="@(inmueble.Estado == "Disponible")">Disponible</option>
                                <option value="Ocupado" selected="@(inmueble.Estado == "Ocupado")">Ocupado</option>
                                <option value="No Disponible" selected="@(inmueble.Estado == "No Disponible")">No Disponible</option>
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Precio">Precio $</label>
                            <input asp-for="Precio" class="form-control" type="number"/>
                            <span asp-validation-for="Precio" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="IdPropietario">Propietario</label>
                            <select id="PropietarioId" name="IdPropietario" class="form-control" >
                                <option value="@Model.IdPropietario" selected>
                                    @(Model.Propietario?.Nombre + " " + Model.Propietario?.Apellido + " / " + Model.Propietario?.Dni)
                                </option>
                            </select>
                            <span asp-validation-for="IdPropietario" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success w-50">Guardar</button>
                        </div>                      
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center mt-4">
        <a asp-action="Index" class="text-volver">Volver a la lista</a>
    </div>
</div>                
@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/i18n/es.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        $('#PropietarioId').select2({
            language: 'es',
            placeholder: 'Escriba al menos 3 letras...',
            minimumInputLength: 3,
            maximumInputLength: 20,
            ajax: {
                delay: 300,
                url: function (params) {
                    return `/Propietarios/BuscarPorNombre?q=${encodeURIComponent(params.term)}`;
                },
                dataType: 'json',
                processResults: function (data) {
                    return {
                        results: data.datos.map(p => ({
                            id: p.id,
                            text: `${p.nombre} ${p.apellido} / ${p.dni}`
                        }))
                    };
                }
            }
        });
    </script>
}