<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Inmobiliaria G12</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Proyecto_Inmobiliaria.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            @if (!User?.Identity?.IsAuthenticated ?? true)
                {
                    <a class="navbar-brand pl-3" asp-controller="Home" asp-action="Index"><span class="lnr lnr-home"></span>
                        Inicio</a>
                    <a class="nav-link d-none d-md-inline-block text-dark ml-auto" asp-controller="Usuario"
                        asp-action="Login"><span class="lnr lnr-enter"></span> Acceder</a>
                }
                else
                {
                    <div class="container-fluid">
                        <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                            <img width="48" height="48" src="https://img.icons8.com/color/48/city-buildings.png" alt="city-buildings" class="me-2"/>
                            <span>Inmobiliaria G12</span>
                        </a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Propietarios" asp-action="Index" class="nav-link text-dark">Propietarios</a>
                                </li>
                                <li class="nav-item">
                                    <a asp-controller="Inmuebles" asp-action="Index" class="nav-link text-dark">Inmueble</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Inquilino" asp-action="Index">Inquilino</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Contrato" asp-action="Index">Contrato</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Pago" asp-action="Index">Pago</a>
                                </li>
                                @if (User?.IsInRole("Administrador") ?? true)
                                {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">
                                        <i class="fa fa-users"></i> Usuario
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Auditoria" asp-action="Index">
                                        <i class="fa fa-users"></i> Auditoria
                                    </a>
                                </li>
                                }
                            </ul>
                            <div class="dropdown">
                                <a class="btn btn-light border dropdown-toggle d-flex align-items-center px-3 py-2 shadow-sm"
                                href="#"
                                role="button"
                                id="userMenu"
                                data-bs-toggle="dropdown"
                                aria-haspopup="true"
                                aria-expanded="false">
                                    
                                    @{
                                        var avatarClaim = User.FindFirst("Avatar")?.Value;
                                        var avatarUrl = string.IsNullOrEmpty(avatarClaim) 
                                            ? Url.Content("~/Uploads/Avatares/usuarioSinImagen.png") 
                                            : Url.Content(avatarClaim);
                                    }
                                    <img src="@avatarUrl" 
                                        alt="Avatar" 
                                        class="rounded-circle me-2 border"
                                        style="width:36px; height:36px; object-fit:cover;">

                                    <span class="fw-semibold text-dark">@User.Identity?.Name</span>
                                </a>

                                <div class="dropdown-menu dropdown-menu-end shadow-sm border-0 rounded-3 mt-2"
                                    aria-labelledby="userMenu"
                                    style="min-width: 180px;">

                                    @{
                                        var idUsuarioClaim = User.FindFirst("IdUsuario");
                                        var idUsuario = idUsuarioClaim != null ? idUsuarioClaim.Value : string.Empty;
                                    }

                                    <a class="dropdown-item d-flex align-items-center gap-2 py-2" 
                                    asp-controller="Usuario" 
                                    asp-action="Perfil">
                                        <i class="fa fa-address-card-o text-primary"></i>
                                        <span>Perfil</span>
                                    </a>

                                    <div class="dropdown-divider my-1"></div>

                                    <a class="dropdown-item d-flex align-items-center gap-2 py-2 text-danger"
                                    asp-controller="Usuario"
                                    asp-action="Logout">
                                        <i class="fa fa-sign-out"></i>
                                        <span>Salir</span>
                                    </a>
                                </div>
                            </div>

                        </div>
                    </div>
                }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Proyecto_Inmobiliaria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
